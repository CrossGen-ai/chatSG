    "gradient": "from-teal-500 to-cyan-600",
    "color": "bg-teal-600",
    "theme": {
      "primary": "#14b8a6",
      "secondary": "#0891b2",
      "background": "rgba(20, 184, 166, 0.1)",
      "text": "#0d9488"
    }
  },
  "configuration": {
    "llm": {
      "model": "default",
      "temperature": 0.3,
      "maxTokens": 2000
    },
    "tools": [
      "insightly-api",
      "contact-manager",
      "opportunity-manager"
    ],
    "memory": {
      "type": "conversation",
      "maxMessages": 50
    },
    "routing": {
      "priority": 0.8,
      "keywords": [
        "crm",
        "customer",
        "contact",
        "lead",
        "opportunity",
        "deal",
        "pipeline",
        "sales",
        "prospect",
        "account",
        "client",
        "insightly"
      ],
      "patterns": [
        "find.*customer",
        "search.*contact",
        "pipeline.*status",
        "opportunity.*details",
        "lead.*information",
        "customer.*lookup",
        "deal.*status"
      ]
    }
  },
  "capabilities": {
    "supportedModes": ["crm", "customer_management", "sales", "pipeline"],
    "features": [
      "contact_management",
      "lead_tracking",
      "opportunity_management",
      "pipeline_analysis",
      "customer_search",
      "deal_tracking",
      "account_management",
      "sales_reporting",
      "customer_insights",
      "relationship_mapping"
    ],
    "inputTypes": ["text", "customer_query", "crm_command"],
    "outputTypes": ["text", "customer_data", "pipeline_report", "sales_metrics"],
    "supportsTools": true,
    "supportsSessions": true,
    "supportsStreaming": false
  },
  "settings": {
    "maxSessionMemory": 2000,
    "responseStyle": "professional",
    "includeMetrics": true,
    "structuredOutput": true
  },
  "tools": [
    "InsightlyAPITool",
    "ContactManagerTool",
    "OpportunityManagerTool",
    "PipelineAnalysisTool"
  ],
  "memory": {
    "conversationHistory": true,
    "customerContext": true,
    "dealHistory": true,
    "userPreferences": true
  },
  "metadata": {
    "author": "ChatSG CRM Integration",
    "created": "2024-01-07",
    "tags": ["crm", "sales", "customer-management"],
    "documentation": "https://docs.chatsg.com/agents/crm"
  }
}